[Unit]
Description=VPS Manager Queue Worker
After=network.target mysql.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/vps-manager
ExecStart=/usr/bin/php /opt/vps-manager/artisan queue:work --sleep=3 --tries=3 --max-time=3600
Restart=always
RestartSec=5
StandardOutput=append:/opt/vps-manager/storage/logs/queue-worker.log
StandardError=append:/opt/vps-manager/storage/logs/queue-worker.log

[Install]
WantedBy=multi-user.target
